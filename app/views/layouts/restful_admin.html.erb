<!DOCTYPE html>
<html>
  <head>
    <title>RestfulAdmin</title>
    <%= stylesheet_link_tag 'reset' %>
    <%= stylesheet_link_tag 'restful_admin', 'ui.notify.css' %>
    <%= javascript_include_tag 'jquery', 'rails', 'jquery.ui.widget.js', 'jquery.notify.js', 'application' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
  </head>
  <body>
    <header>
      <div id="banner">
        <h1><%= link_to 'RestfulAdmin', root_url %></h1>
      </div>
      <div class="menu">
        <%= resources_menu %>
      </div>
      <div class="content">  
        <%= yield :header %>
      </div>
    </header>
    <div id="main">
      <div id="message-container" style="display:none">
        <div id="basic-template">
          <a class="ui-notify-cross ui-notify-close" href="#">x</a>
          <p><%= flash[:alert] || flash[:notice] %></p>
        </div>
      </div>
      <div class="content">
        <div class="actions">
          <%= yield :actions %>
        </div>
        <%= yield %>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>
    <footer>
      <div class="content">  
        <%= yield :footer %>
      </div>
    </footer>
  </body>
</html>
